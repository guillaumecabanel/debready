# ls with eza
alias ls='eza -lh --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'

alias code='code .'
alias cop='bundle exec rubocop'
alias lg='lazygit'
alias cursor='launch_cursor .'
alias update_cursor='curl -sSL https://links.kuartz.fr/install_cursor | bash'
alias up='sudo apt update && sudo apt upgrade -y && update_cursor && sudo apt autoremove && sudo apt autoclean'
